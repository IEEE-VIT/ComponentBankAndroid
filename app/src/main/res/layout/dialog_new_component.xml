<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:textSize="25sp"
    android:fontFamily="@font/dinpro"
    android:layout_marginBottom="15dp"
    android:layout_gravity="center_horizontal"
    android:text="Register a component"/>

    <android.support.design.widget.TextInputLayout
    android:layout_width="270dp"
    android:layout_gravity="center_horizontal"
    android:textColorHint="#c5000000"
    android:textColor="#000000"
    android:backgroundTint="#000000"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the name of component"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:id="@+id/adminComponentRegName"
        android:backgroundTint="#000000"/>
</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="270dp"
        android:layout_gravity="center_horizontal"
        android:textColorHint="#c5000000"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the quantity of component"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:inputType="numberSigned"
            android:id="@+id/adminComponentRegQuantity"
            android:backgroundTint="#000000"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
    android:layout_width="270dp"
    android:layout_gravity="center_horizontal"
    android:textColorHint="#c5000000"
    android:textColor="#000000"
    android:backgroundTint="#000000"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the value of component"
        android:textColorHint="#000000"
        android:inputType="numberSigned"
        android:textColor="#000000"
        android:id="@+id/adminComponentRegValue"
        android:backgroundTint="#000000"/>
</android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/adminComponentRegButton"
        android:layout_gravity="center_horizontal"
        android:text="Register"
        android:textColor="#ffffff"/>
</LinearLayout>